{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2020"
        ],
        "baseUrl": "./src",
        "rootDirs": [
            "src"
        ],
        "outDir": "./dist",
        "strict": true,
        "typeRoots": [
            "./typings",
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*.ts",
        ".eslintrc.js",
    ],
    "exclude": [
        "./src/tests/*.ts"
    ]
}
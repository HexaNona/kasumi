{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2022",
        "module": "node16",
        "moduleResolution": "node16",
        "lib": [
            "ES2022"
        ],
        "baseUrl": "./src",
        "rootDirs": [
            "src"
        ],
        "outDir": "./dist",
        "strict": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "./src/tests/*.ts"
    ]
}